<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.school.coursemailer.mapper.CourseMapper">

    <select id="selectCourseList" parameterType="map" resultType="map">
        SELECT
        cct.course_id,
        cct.course_name
        FROM course_cd_tb cct
        LEFT JOIN course_grade_condition cgc
        ON cct.course_id = cgc.course_id
        <!--
        <where>
            <if test="grade != null">
                AND (
                cgc.course_id IS NULL
                OR #{grade} BETWEEN cgc.min_grade AND cgc.max_grade
                )
            </if>
        </where>
        -->
        ORDER BY cct.course_id
    </select>

    <select id="selectMyCourse" parameterType="map" resultType="map">
        SELECT
            id
            ,student_id
            ,course_id
            ,period
            ,status
        FROM
            student_course
        WHERE
            student_id = #{student_id}::VARCHAR
    </select>

    <insert id="insertMyCourse" parameterType="map">
        INSERT INTO student_course
            (student_id
            ,course_id
            ,period
            ,status)
        VALUES
            (
            #{student_id}
            ,#{course_id}
            ,#{period}
            ,#{status}
            )
    </insert>

    <delete id="deleteMyCourse" parameterType="map">
        DELETE FROM student_course
        WHERE student_id = #{student_id} AND  status = #{status}
    </delete>

    <update id="updateMyCourse" parameterType="map">
        UPDATE student_course
            SET
                student_id
                ,course_id
                ,period
                ,status
            WHERE

    </update>

    <select id="selectMyFutureCourse" parameterType="map" resultType="map">
        SELECT
            sc.id
            ,sc.student_id
            ,sc.course_id
            ,sc.period
            ,sc.status
            ,cct.course_name
        FROM
            student_course sc left join course_cd_tb cct on sc.course_id = cct.course_id
        where
            status = 'O' and student_id = #{student_id}::VARCHAR
    </select>



</mapper>



